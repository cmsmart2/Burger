<div class="container">
  <div class="row">
    <div class="col text-center">
      <h1>Welcome!</h1>
      <h2>It's time to Eat da Burger!</h2>
      </div>
  <div class="row">   
    <div class="col text-center">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}

        </ul>
      </div>
    </div> 
  <div class="row">
    <div class="col text-center">
      <h2>Devoured Burgers!</h2>
        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{burgers/burger-block devoured=true}}
            {{/if}}
          {{/each}}
          </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <h2>Create Your own Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Name:</label>
          <input type="text" id="ca" name="burger_name">
          </div>
        <button type="submit">Add Burger</button>
        </form>
      </div>
    </div>
</div>
