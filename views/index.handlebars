<div class="container">
  <div class="row">
    <div class="col text-center">
      <h2>It's time to Eat da Burger!</h2>
      </div>
      <img src="/assets/img/burger.webp" alt="Burger">
  <div class="row">   
    <div class="col text-center">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <div>{{burger_name}}</div>
          <div class="col text-center">
            <form method="PUT" action="/menu/update">
              <input type="hidden" name="menu_id" value={{this.id}}>
              <button type="submit" class="btn btn-default" id="change-devour" data-id=""="{{id}}"> Devour!</button>
              </form>
            </div>
            {{/unless}}
          {{/each}}
        </ul>
      </div> 
    <div class="col text-center">
      <h2>Devoured Burgers!</h2>
        <ul>
          {{#each burgers}}
            {{#if devoured}}
              <div>{{burger_name}}</div>
            {{/if}}
          {{/each}}
          </ul>
      </div>
    </div>
  <div class="row">
    <div class="col text-center">
      <h2>Create Your own Burger</h2>
      <form action= "/menu/create" method= "POST">
        <input type="text" name="burger_name" class="form-control" value="">
        <button type="submit" class="btn btn-primary" id="create-button">Add Burger!</button>
        </form>
      </div>
    </div>
</div>
